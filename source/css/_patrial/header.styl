@import "colors.styl"
.header-top
  position: fixed
  width: 100%
  top: 0
  height: 8vh
  z-index: 999
.header-container
  nav-opacity = 0.7
  nav-height = 8vh
  nav-left-width = 30%
  nav-right-width = 30%
  display: flex
  justify-content: space-around
  align-items: center
  height: nav-height
  width: 100%
  height: 100%
  background-color: main-color
  border-bottom: 5px solid header-bottom-color

  .nav-left 
    width: nav-left-width
    a
      color = rgb(22, 22, 22)
      &:link
        color: color
      &:visited
        color: color
      &:hover
        color: rgba(157, 178, 191, 0.507)
      &:active
        color: color
  .nav-right
    list-style: none
    display: flex
    height: 100%
    width: nav-right-width
    justify-content: space-evenly
    align-items: center
    li
      display: inline-block
      color: white
    a
      font-size: 1.5em
      text-decoration: none
      &:link
        color: #27374D
      &:visited
        color: #27374D
      &:hover
        color: #526D82
      &:active
        color: #27374D
