@import 'colors.styl'
.article-list
  // 变量
  background-color: second-color
  right-width = 30%
  margin-top: 8vh 
  padding-top: 5vh
  width: 100%
  display: flex
  justify-content: space-around
  color: #27374D
  ul
    min-width: 70vw
    font-size: 1.3em
    width right-width
    li
      &:hover
        outline: 7px solid black
      li-back-color = main-color
      background-color: li-back-color
      margin-bottom: 5vh
      border-radius: 10px
      a
        padding 2vw
        text-decoration: none
        display: flex
        flex-direction: column
        align-items: center
        color = rgb(36, 36, 36)
        &:link
          color: color
        &:visited
          color: color
        &:active
          color: color
        h2, p, p
          &:hover
            color: #48A6A7
          &:active
            color: #9ACBD0