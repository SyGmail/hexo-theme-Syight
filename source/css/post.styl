@import 'colors.styl'
.post-container
  height: 100%
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  background-color: second-color
  margin-top: 8vh

.post-title
  background-color: main-color
  text-align: center
  padding: 5vh 0
  margin-top: 5vh
  width 50%
  border-radius: 10px
  &:hover
    outline: 5px solid black

.post-content
  margin: 5vh
  padding: 5vh
  background-color: post-background-color
  border-radius: 10px 
  font-size: 1.4em
  small-gap = 1vh
  big-gap = 2vh
  a
    &:link
      color: color3
    &:visited
      color: color3
    &:hover
      text-decoration: underline
      color: myGreen
    &:active
      color: color3

  h1,h2
    border-bottom: 2px solid title-underline-color

  h1,h2,h3,h4,h5,h6
    &:hover
      color: second-color
    &::before
      content: '# '
    &:hover
      color: color4
      cursor: pointer
    margin-top: big-gap
    margin-bottom: big-gap
  
  strong
    font-weight: 550

  p
    line-height: 1.6em
    margin-bottom: small-gap

  ol
    margin-bottom: 3px
    
  blockquote
    padding-left: 5px
    background-color: blockquote-background-color
    border-left: 5px solid blockquote-color

  code
    background: code-back-color
    color: code-color
    border-radius: 5px
    padding: 2px
    margin-left: .2em
    margin-right: .2em

  img, iframe
    position: relative
    left: 50%
    transform: translateX(-50%)
    margin-left: auto
    max-width: 70%

  img
    &:hover
      cursor: pointer
    border-radius: 10px

  figure
    padding: 0 3vh  
    margin-bottom: small-gap
    border-radius: 3px
    background-color code-block-background-color
    overflow: auto

    .gutter 
      border-right: 1px solid #dcdfe1
      color: #dcdfe1
      box-sizing: content-box
      margin-right: 10vw
    
    code
      background-color: code-block-background-color
      color: code-block-color

  li
    margin-left: 3vw

  ul
    li::before
      content: "â€¢ "